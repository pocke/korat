{
  "name": "korat",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/pocke/korat",
  "author": "Masataka Pocke Kuwabara <kuwabara@pocke.me>",
  "license": "Apache v2",
  "private": true,
  "scripts": {
    "electron": "cross-env KORAT_URL=http://localhost:32034 electron dist/electron.js",
    "start": "npm-run-all clean --parallel server watch",
    "clean": "rimraf public/build dist && mkdirp public/build",
    "server": "cross-env NODE_ENV=development webpack-serve --config config/webpack.renderer.js --port 32034 --content public",
    "watch": "cross-env NODE_ENV=development webpack --watch --config config/webpack.electron.js",
    "format": "prettier --write 'src/**/*.{js,ts,tsx}'"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "dependencies": {
    "@pocke/await-semaphore": "^0.1.3",
    "@types/lodash-es": "^4.17.0",
    "electron": "^2.0.4",
    "js-yaml": "^3.12.0",
    "lodash-es": "^4.17.10",
    "nedb": "^1.8.0",
    "nedb-promise-ts": "^0.2.1",
    "node-fetch": "^2.1.2",
    "query-string": "^6.1.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1"
  },
  "devDependencies": {
    "@types/jest": "^23.1.5",
    "@types/js-yaml": "^3.11.2",
    "@types/nedb": "^1.8.5",
    "@types/node-fetch": "^2.1.1",
    "@types/query-string": "^6.1.0",
    "@types/react": "^16.4.6",
    "@types/react-dom": "^16.0.6",
    "awesome-typescript-loader": "^5.2.0",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "jest": "^23.4.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.9.2",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.13.7",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.0.3",
    "style-loader": "^0.21.0",
    "ts-jest": "^23.0.0",
    "typescript": "^2.9.2",
    "typings-for-css-modules-loader": "^1.7.0",
    "webpack": "^4.15.1",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^3.0.8",
    "webpack-serve": "^2.0.2"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120
  }
}
